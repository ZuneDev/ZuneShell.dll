        </Reference>
        <ProjectReference Include="..\libs\MicrosoftIris\UIX\UIX.csproj" />

        <!--
            Reference both the real and proxy ZuneDBApi, to make sure we have all the types.
            Use the version from ZuneImpl when available.
        -->
